<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
	<repeat>
		<times>5+(20*$rank)</times>
		<action>
			<fireRef label="seed"><param>90</param></fireRef>
			<fireRef label="seed"><param>270</param></fireRef>
			<wait>55-($rank*30)</wait>
		</action>
	</repeat>
</action>

<fire label="seed">
	<direction type="absolute">$1</direction>
	<speed>2.0</speed>
	<bullet>
		<action>
			<changeSpeed>
				<speed>0</speed>
				<term>20</term>
			</changeSpeed>
			<wait>20</wait>
				<actionRef label="way"/>
			<vanish/>
		</action>
	</bullet>
</fire>

<action label="way">
	<fire>
		<direction type="aim">$rand*60-30-70</direction>
		<speed>4.2</speed>
		<bulletRef label="br"/>
	</fire>
	<repeat>
		<times>7</times>
		<action>
			<fire>
				<direction type="sequence">8.5</direction>
				<speed>1.05</speed>
				<bulletRef label="ac"/>
			</fire>
			<fire>
				<direction type="sequence">8.5</direction>
				<speed>4.2</speed>
				<bulletRef label="br"/>
			</fire>
		</action>
	</repeat>
</action>

<bullet label="br">
	<action>
		<changeSpeed>
			<speed>1.05</speed>
			<term>25</term>
		</changeSpeed>
	</action>
</bullet>

<bullet label="ac">
	<action>
		<changeSpeed>
			<speed>8.4</speed>
			<term>150</term>
		</changeSpeed>
		<wait>9999</wait>
		<fire><bullet/></fire>
	</action>
</bullet>

</bulletml>

