<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <fire>
  <direction type="absolute">180</direction>
  <speed>0.7</speed>
  <bullet>
   <actionRef label="main"/>
  </bullet>
 </fire>
 <wait>200</wait>
</action>

<action label="main">
 <repeat> <times>6+$rank*10</times>
 <action>
  <fire>
   <direction type="sequence">360/(6+$rank*10)</direction>
   <bulletRef label="16way"/>
  </fire>
  <wait>100/(6+$rank*10)</wait>
 </action>
 </repeat>
 <vanish/>
</action>

<bullet label="16way">
<speed>$rand+1</speed>
<action>
 <wait>20+$rand*40</wait>
 <repeat> <times>16</times>
 <action>
  <fire>
   <direction type="sequence">22.5</direction>
   <bullet>
    <speed>1.7</speed>
   </bullet>
  </fire>
 </action>
 </repeat>
 <vanish/>
 </action>
</bullet>

</bulletml>
